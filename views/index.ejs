<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Alcohol Drinkers</title>
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="font-awesome.min.css">
</head>
<body>
  <section class="box">




    <h3>Comments on Beer</h3>
    <ul class="messages">
      <% for(var i=0; i<messages.length; i++) {%>
        <li class="message">
          <span><%= messages[i].name %></span>
          <span><%= messages[i].msg %></span>
          <span><%= messages[i].thumbUp %></span>
          <span><%= messages[i].starRating %></span>
          <span><%= messages[i].thumbDown %></span>
          <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
          <span><i class="fa fa-star" aria-hidden="true"></i></span>
          <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
        </li>
        <% } %>
      </ul>

      <h2>Add a comment on a beer</h2>

      <form action="/messages" method="POST">
        <input type="text" placeholder="beer name" name="name">
        <input type="text" placeholder="comment" name="msg">
        <button type="submit">Submit</button>
      </form>

      <script src="main.js"></script>
    </section>
</body>
</html>
